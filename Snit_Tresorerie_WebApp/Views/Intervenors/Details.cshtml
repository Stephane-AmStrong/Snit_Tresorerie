@model IntervenorResponse

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card card-solid">
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-sm-6">
                    <h3 class="d-inline-block d-sm-none">LOWA Men’s Renegade GTX Mid Hiking Boots Review</h3>
                    <div class="col-12">
                        <img src="@Model.ImgLink" asp-append-version="true" class="product-image" alt="Intervenor Image">
                    </div>
                </div>
                <div class="col-12 col-sm-6">
                    <h4>@Html.DisplayNameFor(model => model.LastName) & @Html.DisplayNameFor(model => model.FirstName)</h4>
                    <div class="btn-group btn-group-toggle" data-toggle="buttons">
                        <h5><strong>@Html.DisplayFor(model => model.LastName) @Html.DisplayFor(model => model.FirstName)</strong></h5>
                    </div>

                    <hr>

                    <h5>@Html.DisplayNameFor(model=>model.BankAccount)</h5>
                    <div class="btn-group btn-group-toggle" data-toggle="buttons">
                        <h5><strong>@Html.DisplayFor(model=>model.BankAccount)</strong></h5>
                    </div>

                </div>
            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section Scripts {
<script>
    $(document).ready(function () {
        $("#navIntervenors").attr("class", "nav-link active");
        $("#navCustomers").attr("class", "nav-link active");
    });
</script>
}