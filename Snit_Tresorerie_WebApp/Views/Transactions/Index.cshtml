@model PagedResponse<IEnumerable<TransactionResponse>>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-solid">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-11">
                                <h3 class="card-title">Liste des évènements</h3>
                            </div>
                           
                            <div class="col-1">
                                <a onclick="showInPopup('@Url.Action("Form","Transactions",null,Context.Request.Scheme)','New Transaction')" class="btn btn-success text-white"><i class="fas fa-plus"></i> Ajouter</a>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body pb-0" id="view-all">
                        @await Html.PartialAsync("_ViewAll", Model)
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#navTransactions").attr("class", "nav-link active");
        });
    </script>
}