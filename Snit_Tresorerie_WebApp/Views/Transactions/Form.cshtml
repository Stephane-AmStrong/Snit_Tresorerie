                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Nature" class="control-label"></label>
                    <input asp-for="Nature" class="form-control" />
                    <span asp-validation-for="Nature" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="AmountBeforeTax" class="control-label"></label>
                    <input asp-for="AmountBeforeTax" class="form-control" />
                    <span asp-validation-for="AmountBeforeTax" class="text-danger"></span>
                </div>
                
