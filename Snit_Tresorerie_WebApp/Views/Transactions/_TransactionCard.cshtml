@model TransactionResponse

<div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
    <div class="card bg-light d-flex flex-fill">
        <div class="card-header text-muted border-bottom-0">
            @Model.Nature
        </div>
        <div class="card-body pt-0">
            <div class="row">
                <div class="col-7">
                    <h2 class="lead"><b>@Model.Type</b></h2>
                    <p class="text-muted text-sm"><b>Type: </b>@Model.Type</p>
                    <ul class="ml-4 mb-0 fa-ul text-muted">
                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-calendar"></i></span> Date: @Model.Date.ToString("dd-MM-yyyy hh:mm")</li>
                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-calendar"></i></span> Reference: @Model.Reference</li>
                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Mnt Ht: @Model.AmountBeforeTax</li>
                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-ticket-alt"></i></span> TVA: @Model.VAT</li>
                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-dollar-sign"></i></span> TTC: @Model.ATI</li>
                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-dollar-sign"></i></span> Mode de paiement: @Model.ModeOfPayment</li>
                    </ul>
                </div>
                <div class="col-5 text-center">
                    @*<img src="@Model.ImgLink" asp-append-version="true" alt="transaction-avatar" class="img-circle img-fluid">*@
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="text-right">

                <a class="btn btn-sm btn-outline-warning" asp-controller="Transactions" asp-action="GenerateQRCodes" asp-route-id="@Model.Id">
                    <i class="fa-solid fa-qrcode" title="Exporter"></i>
                </a>

                <a class="btn btn-sm btn-outline-info" asp-controller="Places" asp-action="Index" asp-route-transactionid="@Model.Id">
                    <i class="fas fa-info-circle" title="Details"></i>
                </a>
                <a onclick="showInPopup('@Url.Action("Form","Transactions",new {id=Model.Id},Context.Request.Scheme)','Update Transaction')" class="btn btn-sm btn-outline-success">
                    <i class="fas fa-pencil-alt" title="Edit"></i>
                </a>
                <a onclick="showInPopup('@Url.Action("Delete","Transactions",new {id=Model.Id},Context.Request.Scheme)','Delete Transaction')" class="btn btn-sm btn-outline-danger">
                    <i class="fas fa-trash" title="Delete"></i>
                </a>
            </div>
        </div>
    </div>
</div>

