@model OperationRequest
@{
    Model.AppUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<form enctype="multipart/form-data" method="post" asp-controller="Operations" asp-action="SaveOperation" asp-route-id="@Model.Id"
      data-ajax="true" data-ajax-method="POST"
      data-ajax-begin="OnBegin" data-ajax-complete="OnComplete"
      data-ajax-failure="OnFailure" data-ajax-success="OnSuccess">
    <div class="modal-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Id" type="hidden" class="form-control" />
        <input asp-for="AppUserId" type="hidden" class="form-control" />




        @*
            Id
            Name
            Reference

            Type => choice achat ou vente
            AmountBeforeTax
            VAT
            ATI

            PaymentOptionId => choice
            IntervenorId
            SiteId
            Date
        *@

        <div class="row">
            <div class="col-sm-6">

                <div class="form-group">
                    <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SiteId" class="control-label"></label>
                    <select asp-for="SiteId" class="form-control" asp-items="ViewBag.SiteId"></select>
                    <span asp-validation-for="SiteId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IntervenorId" class="control-label"></label>
                    <select asp-for="IntervenorId" class="form-control" asp-items="ViewBag.IntervenorId"></select>
                    <span asp-validation-for="IntervenorId" class="text-danger"></span>
                </div>
            </div>





            <div class="col-sm-6">

                <div class="form-group">
                    <label asp-for="Reference" class="control-label"></label>
                    <input asp-for="Reference" class="form-control" />
                    <span asp-validation-for="Reference" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="VAT" class="control-label"></label>
                    <input asp-for="VAT" class="form-control" />
                    <span asp-validation-for="VAT" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="OperationTypeId" class="control-label"></label>
                    <select asp-for="OperationTypeId" class="form-control" asp-items="ViewBag.OperationTypeId"></select>
                    <span asp-validation-for="OperationTypeId" class="text-danger"></span>
                </div>

            </div>
        </div>


        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-sm-6">

                <div class="form-group">
                    <label asp-for="AmountBeforeTax" class="control-label"></label>
                    <input asp-for="AmountBeforeTax" class="form-control" />
                    <span asp-validation-for="AmountBeforeTax" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ATI" class="control-label"></label>
                    <input asp-for="ATI" class="form-control" />
                    <span asp-validation-for="ATI" class="text-danger"></span>
                </div>

            </div>

            <div class="col-sm-6">

                <div class="form-group">
                    <label asp-for="PaymentOptionId" class="control-label"></label>
                    <select asp-for="PaymentOptionId" class="form-control" asp-items="ViewBag.PaymentOptionId"></select>
                    <span asp-validation-for="PaymentOptionId" class="text-danger"></span>
                </div>


            </div>
        </div>

    </div>

    <div class="modal-footer justify-content-between">
        <input type="submit" value="Save changes" class="btn btn-primary btn-block" />

    </div>

</form>

<script src="~/js/modals.js"></script>