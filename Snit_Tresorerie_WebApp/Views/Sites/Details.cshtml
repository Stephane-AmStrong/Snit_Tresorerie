@model SiteResponse

@{ 
    Layout = "_LayoutAdmin";
}

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">

                <!-- Profile Image -->
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            @*<img src="@Model.ImgLink" >*@
                        </div>


                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>Nom</b> <a class="float-right">@Model.Name</a>
                            </li>
                            <li class="list-group-item">
                                @*<b>Statut</b> <a class="float-right"> @Model.IsPublic</a>*@
                            </li>
                            <li class="list-group-item">
                                @*<b>Téléphone</b> <a class="float-right">@Model.PhoneSite</a>*@
                            </li>
                        </ul>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
              
            </div>
            <!-- /.col -->
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header p-2">
                        <ul class="nav nav-pills">
                            <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Détails Site</a></li>
                        </ul>
                    </div><!-- /.card-header -->
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="active tab-pane" id="activity">
                                <!-- Post -->
                                <div class="post">
                                    <div class="user-block">
                                        @*<img src="@Model.ImgLink" alt="user image">*@
                                        <span class="username">
                                            <a href="#">@Model.Name</a>
                                            <a href="#" class="float-right btn-tool"><i class="fas fa-times"></i></a>
                                        </span>
                                        <span class="description">@Model.Country</span>
                                    </div>
                                </div>
                               
                            </div>
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->