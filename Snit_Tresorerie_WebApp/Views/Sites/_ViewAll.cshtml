@model PagedResponse<IEnumerable<SiteResponse>>
@*@model IEnumerable<SiteResponse>*@

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Data.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.First().Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.First().Headquarters)
            </th>
            <th>
                <a onclick="showInPopup('@Url.Action("Form","Sites",null,Context.Request.Scheme)','New Site')" class="btn btn-success text-white"><i class="fas fa-plus"></i> Ajouter</a>
            </th>
        </tr>
    </thead>
    <tbody id="example2body" class="table-hover">
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Headquarters)
                </td>
                <td>
                    <a class="btn btn-sm btn-outline-info" asp-controller="Sites" asp-action="Details" asp-route-id="@item.Id">
                        <i class="fas fa-info-circle" title="Details"></i>
                    </a>
                    <a onclick="showInPopup('@Url.Action("Form","Sites",new {id=item.Id},Context.Request.Scheme)','Update Site')" class="btn btn-sm btn-outline-success">
                        <i class="fas fa-pencil-alt" title="Edit"></i>
                    </a>
                    <a onclick="showInPopup('@Url.Action("Delete","Sites",new {id=item.Id},Context.Request.Scheme)','Delete Site')" class="btn btn-sm btn-outline-danger">
                        <i class="fas fa-trash" title="Delete"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


