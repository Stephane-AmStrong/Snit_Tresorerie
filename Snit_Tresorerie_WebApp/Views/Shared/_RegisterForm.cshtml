@model AppUserViewModel

<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-item">
        <input asp-for="FirstName" placeholder="Prénoms">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-item">
        <input asp-for="LastName" placeholder="FirstName">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-item">
        <input asp-for="Email" placeholder="example@gmail.com">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-item">
        <input asp-for="Password" placeholder="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-item">
        <input asp-for="ConfirmPassword" placeholder="ConfirmPassword">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-item">
        <div class="row">
            <div class="col-lg-6">
                <select asp-for="RoleId" class="form-control" asp-items="ViewBag.WorkstationId"></select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
        </div>

        </div>
        <div class="form-item">
           
        </div>


        <button type="submit" class="login-btn">Se connecter maintenant</button>
</form>
